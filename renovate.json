{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "labels": [
    "dependencies",
    "{{datasource}}",
    "{{updateType}}"
  ],
  "automerge": true,
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "ARG PIXLET_PACKAGE=(?<depName>.+)",
        "ARG PIXLET_VERSION=(?<currentValue>.+)"
      ],
      "datasourceTemplate": "go"
    },
    {
      "fileMatch": ["^\\.github/workflows/"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\\s+PIXLET_PACKAGE: (?<depName>.+)",
        "\\s+PIXLET_VERSION: (?<currentValue>.+)"
      ],
      "datasourceTemplate": "go"
    }
  ],
  "commitMessagePrefix": ":arrow_up:",
  "packageRules": [
    {
      "matchUpdateTypes": ["lockFileMaintenance", "pin"],
      "commitMessagePrefix": ":pushpin:"
    },
    {
      "matchUpdateTypes": ["rollback"],
      "commitMessagePrefix": ":arrow_down:"
    }
  ]
}
